---
import IconLogo from "~icons/custom/logo";
import IconRss from "~icons/lucide/rss";
import Group from "../../components/layout/group/Group.vue";
import HeaderLink from "../../components/navigation/header-link/HeaderLink.vue";
import { SITE_TITLE } from "../../consts";
import ThemeToggle from "./theme-toggle/ThemeToggle.astro";

const pathname = Astro.url.pathname;
---

<header transition:persist class="w-full">
	<nav>
		<Group justify="between" class="p-md">
			<HeaderLink href="/" astroPathname={pathname} client:load>
				<IconLogo slot="icon" class="text-foreground not-dark:invert" />
				<h2 class="hidden font-semibold xs:inline">{SITE_TITLE}</h2>
			</HeaderLink>

			<Group spacing="md">
				<Group spacing="sm">
					<HeaderLink href="/blog" astroPathname={pathname} client:load
						>Blog</HeaderLink
					>
					<HeaderLink href="/about" astroPathname={pathname} client:load
						>About</HeaderLink
					>
				</Group>

				<Group spacing="sm">
					<ThemeToggle />
					<HeaderLink
						href="/rss.xml"
						target="_blank"
						astroPathname={pathname}
						client:load
						aria-label="RSS Feed"
						title="RSS Feed"
						class="p-xs"
					>
						<IconRss />
					</HeaderLink>
				</Group>
			</Group>
		</Group>
	</nav>
</header>
