---
import IconGithub from "~icons/custom/github";
import IconLinkedin from "~icons/custom/linkedin";
import { cn } from "tailwind-variants";

import Group from "../../components/layout/group/Group.vue";
import Stack from "../../components/layout/stack/Stack.vue";

const today = new Date();
---

<footer class="pt-2xl pb-md text-sm font-light text-foreground-secondary">
	<Stack align="center" spacing="xs">
		<Group spacing="sm">
			<a
				href="https://github.com/domingasp"
				target="_blank"
				class={cn([
					"text-foreground no-underline transition-all",
					"hover:text-[#08872B] dark:hover:text-[#5FED83]",
					"focus:text-[#08872B] dark:focus:text-[#5FED83]",
				])({ twMerge: true })}
			>
				<span class="sr-only">Go to Domingas' GitHub repo</span>
				<IconGithub />
			</a>

			<a
				href="https://www.linkedin.com/in/domingas-pleckauskas/"
				target="_blank"
				class={cn([
					"text-foreground no-underline transition-all",
					"hover:text-[#008CC9] dark:hover:text-[#34B3E4]",
					"focus:text-[#008CC9] dark:focus:text-[#34B3E4]",
				])({ twMerge: true })}
			>
				<span class="sr-only">Go to Domingas' LinkedIn profile</span>
				<IconLinkedin />
			</a>
		</Group>

		&copy; {today.getFullYear()} Domingas Pleckauskas. All rights reserved.
	</Stack>
</footer>
