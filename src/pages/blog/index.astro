---
import { Image } from "astro:assets";
import { getCollection } from "astro:content";
import BaseHead from "../../components/BaseHead.astro";
import Footer from "../../components/Footer.astro";
import FormattedDate from "../../components/FormattedDate.astro";
import Header from "../../components/Header.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../../consts";
import { OverlayScrollbars } from "overlayscrollbars";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<!doctype html>
<html lang="en" data-overlayscrollbars-initialize>
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body data-overlayscrollbars-initialize>
    <Header />
    <main>
      <section>
        <ul>
          {
            posts.map((post) => (
              <li>
                <a href={`/blog/${post.id}/`}>
                  {post.data.heroImage && (
                    <Image
                      src={post.data.heroImage}
                      alt=""
                      transition:name={`${post.id} hero`}
                    />
                  )}
                  <h4 class="title" transition:name={`${post.id} title`}>
                    {post.data.title}
                  </h4>
                  <p class="date" transition:name={`${post.id} pubDate`}>
                    <FormattedDate date={post.data.pubDate} />
                  </p>
                </a>
              </li>
            ))
          }
        </ul>
      </section>
    </main>
    <Footer />
  </body>
</html>

<script>
  import { OverlayScrollbars } from "overlayscrollbars";

  const initBodyOverlayScrollbars = () => {
    OverlayScrollbars(
      {
        target: document.body,
        cancel: {
          body: null,
        },
      },
      {
        scrollbars: {
          theme: "os-theme-madebydomdev",
        },
      }
    );
  };

  document.addEventListener("DOMContentLoaded", initBodyOverlayScrollbars);

  document.addEventListener("astro:after-swap", initBodyOverlayScrollbars);
</script>
