---
import { Image } from "astro:assets";
import { getCollection } from "astro:content";
import BaseHead from "../../components/BaseHead.astro";
import FormattedDate from "../../components/FormattedDate.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../../consts";
import Footer from "../../features/footer/Footer.astro";
import Header from "../../features/header/Header.astro";

const posts = (await getCollection("blog")).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<!doctype html>
<html lang="en" data-overlayscrollbars-initialize>
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body data-overlayscrollbars-initialize>
		<Header />
		<main>
			<section>
				<ul class="mt-0 list-none p-0">
					{
						posts.map((post) => (
							<li>
								<a href={`/blog/${post.id}/`}>
									{post.data.heroImage && (
										<Image
											src={post.data.heroImage}
											alt=""
											transition:name={`${post.id} hero`}
										/>
									)}
									<h4 transition:name={`${post.id} title`}>
										{post.data.title}
									</h4>
									<p transition:name={`${post.id} pubDate`}>
										<FormattedDate date={post.data.pubDate} />
									</p>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
