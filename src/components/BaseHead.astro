---
// Import the global.css file here so that it is included on
// all pages through the use of the <BaseHead /> component.
import "overlayscrollbars/styles/overlayscrollbars.css";

import "../styles/theme.css";
import "../styles/base.css";
import "../styles/global.css";
import type { ImageMetadata } from "astro";

import { ClientRouter } from "astro:transitions";

import { SITE_TITLE } from "../consts";

interface Props {
	description: string;
	title: string;
	image?: ImageMetadata;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

const { description, title } = Astro.props;
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<link rel="sitemap" href="/sitemap-index.xml" />
<link
	rel="alternate"
	type="application/rss+xml"
	title={SITE_TITLE}
	href={new URL("rss.xml", Astro.site)}
/>
<meta name="generator" content={Astro.generator} />

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<ClientRouter />

<script is:inline>
	const prefersDarkQuery = window.matchMedia("(prefers-color-scheme: dark)");

	function applyTheme(theme) {
		const prefersDark = prefersDarkQuery.matches;

		document.documentElement.dataset.theme =
			theme === "system" ? (prefersDark ? "dark" : "light") : theme;
	}

	function getStoredTheme() {
		try {
			return localStorage.getItem("theme") || "system";
		} catch {
			return "system";
		}
	}

	function initTheme() {
		applyTheme(getStoredTheme());
	}

	prefersDarkQuery.addEventListener("change", () => {
		if (getStoredTheme() === "system") {
			applyTheme("system");
		}
	});

	// Re-apply theme after Astro page navigation
	document.addEventListener("astro:after-swap", initTheme);

	initTheme();
</script>

<script>
	import { OverlayScrollbars } from "overlayscrollbars";

	const initBodyOverlayScrollbars = () => {
		OverlayScrollbars(
			{
				cancel: {
					body: null,
				},
				target: document.body,
			},
			{
				scrollbars: {
					theme: "os-theme-madebydomdev",
				},
			}
		);

		// Prevent Flash of Native Scrollbars,
		// data-overlayscrollbars-initialize alone did not work
		document.body.classList.remove("overflow-hidden");
	};

	document.addEventListener("DOMContentLoaded", initBodyOverlayScrollbars);
	document.addEventListener("astro:after-swap", initBodyOverlayScrollbars);
</script>
